ACTION_IF (GAME_IS ~bg2 tob bgt~) BEGIN

	ACTION_IF ~%WEIDU_OS%~ STR_EQ ~win32~ BEGIN
		AT_UNINSTALL ~rmdir /s /q %MOD_FOLDER%\temp1~ EXACT
	END ELSE BEGIN //osx, unix
		AT_UNINSTALL ~rm -rf %MOD_FOLDER%/temp1~ EXACT
	END
	
	ACTION_DEFINE_ASSOCIATIVE_ARRAY table_ctb_chor_biff BEGIN
		~ctb-Chor~ , ~override~ , ~^.*\.tis$~ => 100000000 //100 MB
	END
	
	ACTION_PHP_EACH table_ctb_chor_biff AS biff => size BEGIN
		OUTER_SET totalSize = 0
		OUTER_SET index = 0
		MKDIR ~%MOD_FOLDER%/temp1/%biff%%index%~
		ACTION_BASH_FOR ~%biff_1%~ ~%biff_2%~ BEGIN
			ACTION_IF ( BASH_FOR_SIZE + totalSize > size ) AND ( totalSize > 0 ) BEGIN
				MAKE_BIFF ~%biff%%index%~ BEGIN ~%MOD_FOLDER%/temp1/%biff%%index%~ ~^.*$~ END
				OUTER_SET index = index + 1
				OUTER_SET totalSize = 0
				MKDIR ~%MOD_FOLDER%/temp1/%biff%%index%~
			END
			MOVE ~%BASH_FOR_FILESPEC%~ ~%MOD_FOLDER%/temp1/%biff%%index%~
			OUTER_SET totalSize = totalSize + BASH_FOR_SIZE
		END
		ACTION_IF ( totalSize > 0 ) BEGIN
			MAKE_BIFF ~%biff%%index%~ BEGIN ~%MOD_FOLDER%/temp1/%biff%%index%~ ~^.*$~ END
		END
	END
END

